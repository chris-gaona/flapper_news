<div class="page-header">
  <h1>Flapper News</h1>
</div>

<div ng-show="auth.error" class="alert alert-danger row">
  <span>{{auth.error.message}}</span>
</div>

<form ng-submit="auth.logIn()" style="margin-top:30px;">
  <h3>Log In</h3>

  <div class="form-group">
    <input type="text" class="form-control" placeholder="Username" ng-model="auth.user.username" auto-focus/>
  </div>

  <div class="form-group">
    <input type="password" class="form-control" placeholder="Password" ng-model="auth.user.password" />
  </div>

  <button type="submit" class="btn btn-primary">Log In</button>
</form>
